<div class="news">
  {% if page.latest_projects != blank %}
    {% assign latest_projects_size = site.projects | size %}
    <div
      class="table-responsive"
      {% if page.latest_projects.scrollable and latest_projects_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% assign latest_projects = site.projects | sort: "date" | reverse %}
        {% if page.latest_projects.limit %}
          {% assign latest_projects_limit = page.latest_projects.limit %}
        {% else %}
          {% assign latest_projects_limit = latest_projects_size %}
        {% endif %}
        {% for item in latest_projects limit: latest_projects_limit %}
          <tr>
            <th scope="row" style="width: 20%">{{ item.date | date: '%b %d, %Y' }}</th>
            <td>
              <a class="news-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No projects so far...</p>
  {% endif %}
</div>
